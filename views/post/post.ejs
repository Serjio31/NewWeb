<% include ../layout/header.ejs %>

<div class="main">
    <div class="container">
        <div class="content">

            <div class="post">
                <div class="top">
                    <h2 data-test-id="post-title">
                        <span><%= post.title %> </span>
                        <% if (post.owner.login === user.login || user.group === 'Admins') { %>
                            <a style="color: black;text-decoration: none;"
                               href="/api/post/edit/<%= post.id %>" data-test-id="post-edit">✎</a>
                        <% } %>
                    </h2>
                </div>
                <div class="body" data-test-id="post-body">
                    <%- post.body %>
                </div>
                <div class="bottom">
                    <div class="author">
                        Автор:
                        <a href="/users/<%= post.owner.login %>">
                            <%= post.owner.login %>
                        </a>
                    </div>
                </div>
            </div>

            <div class="comments" id="<%= post.id %>">
                <h3>Комментарии</h3>
                <div class="comment-list">
                    <%- include('../layout/comments.ejs', {items: comments, user: user}) %>


                    <form class="comment">
                        <textarea name="body" data-test-id="comment-body"></textarea>
                        <div class="buttons">
                            <button class="cancel secondary">Отмена</button>
                            <button class="send" data-test-id="comment-btn-send">Отправить</button>
                        </div>
                    </form>

                    <form class="comment_edit">
                        <textarea name="body"></textarea>
                        <div class="buttons">
                            <button class="cancel secondary">Отмена</button>
                            <button class="edit_comment">Отправить</button>
                        </div>
                    </form>

                </div>
            </div>


        </div>

        <% include ../layout/sidebar.ejs %>

    </div>
</div>

<% include ../layout/footer.ejs %>